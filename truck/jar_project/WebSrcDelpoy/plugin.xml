<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin >

   <extension point="org.eclipse.ui.actionSets">
      <actionSet
            label="Sample Action Set"
            visible="true"
            id="WebSrcDelpoy.actionSet">
         <menu
               label="Sample &amp;Menu"
               id="sampleMenu">
            <separator
                  name="sampleGroup">
            </separator>
         </menu>
         <action
               label="&amp;程序发布工具"
               icon="icons/sample.gif"
               class="websrcdelpoy.actions.WebDeploy"
               tooltip="WebSrcDelpoy"
               menubarPath="sampleMenu/sampleGroup"
               toolbarPath="sampleGroup"
               id="websrcdelpoy.actions.WebDeploy">
         </action>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="WebSrcDelpoy"
            name="WebApp Category">
      </category>
      <view
            category="WebSrcDelpoy"
            class="websrcdelpoy.views.ElamView"
            icon="icons/sample.gif"
            id="websrcdelpoy.views.ElamView"
            name="ElamView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               id="websrcdelpoy.views.ElamView"
               ratio="0.5"
               relationship="right"
               relative="org.eclipse.ui.views.TaskList">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>

</plugin>
