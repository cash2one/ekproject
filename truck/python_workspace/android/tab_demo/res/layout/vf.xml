<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="fill_parent"
        android:layout_height="50px"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb01"
            style="@style/menu_item_vf"
            android:background="@drawable/btn_begin"
            android:checked="true"
            android:text="主页" />

        <RadioButton
            android:id="@+id/rb02"
            style="@style/menu_item_vf"
            android:background="@drawable/btn_middle"
            android:text="清除" />

        <RadioButton
            android:id="@+id/rb03"
            style="@style/menu_item_vf"
            android:background="@drawable/btn_middle"
            android:text="刷新" />

        <RadioButton
            android:id="@+id/rb04"
            style="@style/menu_item_vf"
            android:background="@drawable/btn_middle"
            android:text="保存" />

        <RadioButton
            android:id="@+id/rb05"
            style="@style/menu_item_vf"
            android:background="@drawable/btn_end"
            android:text="更多" />
    </RadioGroup>

    <ViewFlipper
        android:id="@+id/vf"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
    </ViewFlipper>
</LinearLayout>