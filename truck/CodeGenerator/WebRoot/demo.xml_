<?xml version="1.0" encoding="utf-8"?>
<businessMap namespace="edu" class="Student"  businessNamespace="business" 
             daoNamespace="dao" entityNamespace="entity" mapperNamespace="mapper"
             table="CS_XJ_STUDENT" tableAlias="stu" sequence="${areaAbb}_xj_student_seq" primaryKey="id" isAreaDeal="true">
  <descript>
       <version>1.0</version>
       <author>xxt</author>
       <memo>学生信息</memo>
  </descript>
  <items>
       <item name="id" type="long" sourceType="Decimal" isReadonly="false" sourceField="ID" descript="主键id"/>
       <item name="stuSequence" type="String" sourceType="VARCHAR" isReadonly="false" sourceField="STU_SEQUENCE" descript="学籍号"/>
       <item name="name" type="String" sourceType="VARCHAR" isReadonly="false" sourceField="NAME" descript="学生名称"/>
       <item name="icNo" type="String" sourceType="VARCHAR" isReadonly="false" sourceField="IC_NO" descript="学号"/>
       <joinOneItem table="CS_XJ_FAMILY" tableAlias="family" joinType="LEFT"  primaryTableKey="STU_SEQUENCE" joinTableKey="STU_SEQUENCE">
                <item name="famName" type="String" sourceType="VARCHAR" isReadonly="true" sourceField="name" descript="家长名称"/>
	            <item name="phone" type="String" sourceType="VARCHAR" isReadonly="true" sourceField="phone" descript="联系电话"/>
       </joinOneItem>
       <joinOneItem table="CS_XJ_STU_CLASS" tableAlias="xsc" joinType="LEFT"  primaryTableKey="STU_SEQUENCE" joinTableKey="STU_SEQUENCE">
	       <joinOneItem table="XJ_CLASS" tableAlias="class" joinType="LEFT"  primaryTableKey="CLASS_ID" joinTableKey="ID">
	             <item name="classId" type="long" sourceType="Decimal" isReadonly="true" sourceField="ID" descript="班级ID"/>
	             <item name="className" type="String" sourceType="VARCHAR" isReadonly="true" sourceField="CLASS_NAME" descript="班级名称"/>
	       </joinOneItem>
	       <joinOneItem table="XJ_SCHOOL" tableAlias="school" joinType="LEFT"  primaryTableKey="SCHOOL_ID" joinTableKey="ID">
	             <item name="schoolId" type="long" sourceType="Decimal" isReadonly="true" sourceField="ID" descript="学校ID"/>
	             <item name="schoolName" type="String" sourceType="VARCHAR" isReadonly="true" sourceField="SCHOOL_NAME" descript="学校名称"/>
	             <joinOneItem table="TOWN" tableAlias="town" joinType="LEFT"  primaryTableKey="TOWN_ID" joinTableKey="ID">
		             <item name="townName" type="String" sourceType="VARCHAR" isReadonly="true" sourceField="NAME" descript="镇区"/>
	             </joinOneItem>
	       </joinOneItem>
       </joinOneItem>
   </items>
</businessMap>